<resources>

    <style name="CawTheme.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDarkAndText</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/colorBackgroundAndText</item>
    </style>

    <style name="CawTheme" parent="CawTheme.Base">
        <item name="android:colorForeground">@color/colorPrimaryDarkAndText</item>
        <item name="android:textColor">@color/colorPrimaryDarkAndText</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDarkAndText</item>
        <item name="android:windowBackground">@color/colorBackgroundAndText</item>
    </style>

    <style name="CawTheme.Launcher">
        <item name="android:windowBackground">@drawable/app_launcher_splash</item>
    </style>
</resources>
