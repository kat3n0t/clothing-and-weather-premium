<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/background"
    style="@style/CawTheme.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:theme="@style/CawTheme.AppWidget">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="0.6">

        <TextView
            android:id="@+id/appwidget_text_weather"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:contentDescription="@string/app_name"
            android:text="@string/app_name"
            android:textAlignment="center"
            tools:text="7.39 °C / 45.3 °F" />

        <TextView
            android:id="@+id/appwidget_text_city"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appwidget_text_weather"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:contentDescription="@string/city"
            android:text="@string/loading"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorSecondary"
            android:visibility="gone"
            tools:text="Kemerovo, RU"
            tools:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/widget_layout_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/colorAccent"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible" />

    <RelativeLayout
        android:id="@+id/widget_layout_weather_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="0.4"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/appwidget_text_speed"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:contentDescription="@string/wind"
            android:text="@string/wind"
            android:textAlignment="center"
            android:visibility="gone"
            tools:text="Wind = 2 m/sec"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/appwidget_text_humidity"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appwidget_text_speed"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:contentDescription="@string/humidity"
            android:text="@string/humidity"
            android:textAlignment="center"
            android:visibility="gone"
            tools:text="Humidity = 76.0%"
            tools:visibility="visible" />
    </RelativeLayout>
</LinearLayout>